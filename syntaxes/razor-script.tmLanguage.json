{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Razor Script",
    "patterns": [{
            "include": "#comments"
        },
        {
            "include": "#ctrl-flow-statements"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "begin": "#",
                "beginCaptures": {
                    "0": {
                        "name": "comment.line.number-sign.razor-script"
                    }
                },
                "end": "\\n",
                "name": "comment.line.number-sign.razor-script"
            }, {
                "begin": "//",
                "beginCaptures": {
                    "0": {
                        "name": "comment.line.number-sign.razor-script"
                    }
                },
                "end": "\\n",
                "name": "comment.line.number-sign.razor-script"
            }]
        },
        "ctrl-flow-statements": {
            "patterns": [{
                "name": "keyword.control.razor-script",
                "match": "\\b(if|else|elseif|endif|for|endfor|while|endwhile|break|continue|loop|replay|stop)\\b"
            }]
        }
    },
    "scopeName": "source.razor"
}